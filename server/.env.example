# Database Configuration (PostgreSQL)
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=volado_game
DB_USER=volado_user
DB_PASSWORD=your_secure_password_here
# SQLite config (commented out)
#DB_STORAGE=./volado_game.db

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3010
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:8081,http://localhost:8080,http://localhost:8000,file://

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12

# Game Configuration
MAX_SAVE_SIZE_BYTES=10240
ANTI_CHEAT_ENABLED=true
LEADERBOARD_UPDATE_INTERVAL=300000

# Sync Strategy Configuration
SYNC_INTERVAL_MS=1800000
BATCH_SIZE_LIMIT=500
COMPRESSION_ENABLED=true
OBSESSIVE_PLAYER_PROTECTION=true